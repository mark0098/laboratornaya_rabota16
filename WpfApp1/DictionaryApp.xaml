<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Создание стиля для кнопок-->
    <Style x:Key="ButtonMenu"> 
        <Setter Property="ItemsControl.Height" Value="25"/>
        <Setter Property="ItemsControl.Margin" Value="10, 10, 5, 10"/>
        <Setter Property="ItemsControl.Padding" Value="5, 0, 5, 0"/>
        <Setter Property="ItemsControl.BorderThickness" Value="2"/>
    </Style>
</ResourceDictionary>